<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.natan.InagataMovieApp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_inagata_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_inagata_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.natan.InagataMovieApp.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.natan.InagataMovieApp.DetailActivity"
            android:parentActivityName="com.example.natan.InagataMovieApp.MainActivity">

            <meta-data
                android:name="android.support."
                android:value=".MainActivity"/>


        </activity>
    </application>

</manifest>